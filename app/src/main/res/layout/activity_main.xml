<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/portrait"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:textSize="50dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <TableRow>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/purple"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:id="@+id/one_port"/>



            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/two_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/three_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/devide_port"/>

        </TableRow>

        <TableRow>
            <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="40dp"
            android:textColor="@color/black"
                android:id="@+id/four_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/five_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/six_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ã—"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/multiplicate_port"/>

        </TableRow>

        <TableRow>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/seven_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/eight_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/nine_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/minus_port"/>

        </TableRow>

        <TableRow>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="."
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/point_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/zero_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="%"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/procent_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/plus_port"/>

        </TableRow>

        <TableRow>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/clear_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="del"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/delete_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="="
                android:textSize="40dp"
                android:textColor="@color/black"
                android:id="@+id/result_port"/>

        </TableRow>
    </TableLayout>



</RelativeLayout>
