<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/land"
    tools:ignore="MissingDefaultResource"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="30dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <TableRow>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:background="@color/purple"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:id="@+id/one_port"
                />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/two_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/three_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/devide_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="("
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/leftLine_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="sin"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/sin_port"/>

        </TableRow>

        <TableRow>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/four_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/five_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/six_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="Ã—"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/multiplicate_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text=")"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/rightLine_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="cos"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/cos_port"/>

        </TableRow>

        <TableRow>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/seven_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/eight_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/nine_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/minus_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="^"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/step_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="TG"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/tg_port"/>

        </TableRow>

        <TableRow>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/point_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/zero_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="%"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/procent_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/plus_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="e"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/E_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="log"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/log_port"/>

        </TableRow>

        <TableRow>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:id="@+id/clear_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="del"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:id="@+id/delete_port"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="8"
                android:text="="
                android:textSize="25dp"
                android:textColor="@color/black"
                android:id="@+id/result_port"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="PI"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:id="@+id/pi_port"/>

        </TableRow>
    </TableLayout>



</RelativeLayout>
